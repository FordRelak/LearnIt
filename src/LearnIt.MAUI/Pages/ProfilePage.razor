@page "/Profile"
@using LearnIt.DTO

<style>
    section {
        flex: 1;
        display: flex;
        flex-direction: column;
        background: linear-gradient(224.86deg, #AEE9C9 4.87%, #29A8DF 98.81%);
        padding: 20px;
    }

    .leanerdWord-block {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 10px;
        padding: 42px 45px;
        margin-top: 85px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .learnedWord-maintext {
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 700;
        font-size: 69.9574px;
        line-height: 85px;
        color: #FFFFFF;
    }

    .learnedWord-text {
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 600;
        font-size: 16px;
        line-height: 20px;
        text-align: center;
        color: #FFFFFF;
    }

    .about-block {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 10px;
        font-family: 'Nunito';
        font-style: normal;
        font-weight: 700;
        font-size: 16px;
        line-height: 22px;
        color: #FFFFFF;
        padding: 12px;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

    .mt-55 {
        margin-top: 55px;
    }
</style>

<section>
    <div class="leanerdWord-block">
        <div class="learnedWord-maintext">@userInfo?.LearnedWords</div>
        <div class="learnedWord-text">новых слов ты уже выучил вместе с нами</div>
    </div>
    <a href="/aboutFaq/1">
        <div class="about-block mt-55">О приложении</div>
    </a>
    <a href="/aboutFaq/2">
        <div class="about-block mt-2">F&Q</div>
    </a>
    <a href="https://www.patreon.com/LearnITapplication">
        <div class="about-block mt-2">Поддержать проект</div>
    </a>
</section>

<BottomNavBar Mode="3"></BottomNavBar>

@code {
    private UserInfoDto userInfo;

    protected override async Task OnParametersSetAsync()
    {
        userInfo = await DeviceService.GetUserInfo();
    }
}