@page "/dictionary"
@using LearnIt.DTO

<style>
    .flex-1 {
        flex: 1
    }

    .search {
        display: flex;
        background: #F0F0F0;
        border-radius: 10px;
        padding: 10px 19px;
        display: flex;
    }

    .search-icon {
        width: 15px;
        height: 15px;
    }

    .search-input {
        background: #F0F0F0;
        width: 100%;
        padding-left: 6px;
        display: flex;
    }

        .search-input input {
            width: 100%;
            background: #F0F0F0;
            border: none;
            outline: none;
        }

    .options {
        padding-top: 20px;
        display: flex;
        flex-direction: column;
    }

    .option {
        background: #FFFFFF;
        border-radius: 10px;
        margin-bottom: 10px;
        display: flex;
        filter: drop-shadow(3px 3px 5px rgba(0, 0, 0, 0.1));
    }

    .option-block {
        background: linear-gradient(135deg, #6964DE 2.88%, #FCA6E9 100%);
        border-radius: 10px 0px 0px 10px;
        width: 10px;
        height: 45px;
    }

    .option-text {
        font-family: 'Nunito';
        font-style: normal;
        font-weight: 400;
        font-size: 16px;
        line-height: 22px;
        color: #444444;
        align-self: center;
        padding-left: 10px;
    }

    .category-block {
        background: linear-gradient(135deg, #6964DE 2.88%, #FCA6E9 100%);
        border-radius: 10px 10px 0 0;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .categories-title {
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 700;
        font-size: 20px;
        line-height: 20px;
        color: #FFFFFF;
    }

    .category-list-block {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 10px 10px 0 0;
        flex: 1;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-bottom: none;
        padding: 15px 15px 0 15px;
        overflow: auto;
    }

    .category-name {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 400;
        font-size: 16px;
        line-height: 19px;
        color: #FFFFFF;
        padding-bottom: 15px;
    }

    .image-add-word {
        position: absolute;
        bottom: 0;
        transform: translate(-50%, 0);
        left: 50%;
    }

    .text {
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 700;
        font-size: 20px;
        line-height: 20px;
        color: #444444;
    }

    .search-result-block {
        background: #F4F4F4;
        border-radius: 10px 10px 0px 0px;
        padding: 16px;
    }

    .search-result {
        background: #FFFFFF;
        border: 0.9px solid #F4F4F4;
        border-radius: 10px;
        padding: 10px;
    }

    .original-text {
        font-family: 'Nunito';
        font-style: normal;
        font-weight: 700;
        font-size: 15px;
        line-height: 20px;
        color: #444444;
    }

    .translated-text {
        font-family: 'Nunito';
        font-style: normal;
        font-weight: 400;
        font-size: 15px;
        line-height: 20px;
        color: #444444;
    }
</style>

<section class="d-flex flex-column px-4">
    <div class="pt-5">
        <h2 class="mt-3 text">Словарь</h2>
    </div>

    <div class="search">
        <div class="search-icon">
            <img src="/images/lupa.svg" />
        </div>
        <div class="search-input">
            <input type="text" placeholder="Поиск" @onfocusin="OnFocusInInput" @onfocusout="OnFocusOutInput" />
        </div>
    </div>
</section>

@if(isSearchView)
{
    <section class="d-flex flex-column px-4 flex-1 mt-4">
        <div class="flex-1 search-result-block">
            <div class="search-result">
                <div class="original-text">Слово</div>
                <div class="translated-text">Перевод</div>
            </div>
        </div>
    </section>
}
else
{
    <section class="d-flex flex-column px-4">
        <div class="options">
            <div class="option">
                <div class="option-block"></div>
                <div class="option-text">Добавить категорию</div>
            </div>
            <div class="option">
                <div class="option-block"></div>
                <div class="option-text">Мои слова</div>
            </div>
        </div>
    </section>

    <section class="flex-1 d-flex flex-column position-relative">
        <div class="category-block px-4 pt-4">

            <div>
                <h2 class="categories-title">Категории</h2>
            </div>

            <div class="category-list-block">
                @foreach(var category in categories)
                {
                    <a href="/">
                        <div class="category-name">
                            @category.Name
                        </div>
                    </a>
                }
            </div>
        </div>

        <div class="image-add-word">
            <img src="/images/addWord.svg" />
        </div>
    </section>
}
@if(isShowNav)
{
    <BottomNavBar Mode="2"></BottomNavBar>
}

@code {
    private bool isShowNav = true;
    private ShortCategoryDto[] categories = Array.Empty<ShortCategoryDto>();
    private bool isSearchView = false;

    protected override async Task OnInitializedAsync()
    {
        categories = await CategoryService.GetCategories();
    }

    void OnFocusInInput()
    {
        isShowNav = false;
        isSearchView = true;
    }

    void OnFocusOutInput()
    {
        isShowNav = true;
        isSearchView = false;
    }
}