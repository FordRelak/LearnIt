@page "/main"

<style>
    .bg-blindsky {
        background: linear-gradient(224.86deg, #AEE9C9 4.87%, #29A8DF 98.81%);
    }

    .menu {
        border-radius: 10px;
        width: 100%;
        padding: 12px 13px;
        box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.1);
    }

        .menu .text {
            font-family: 'Nunito';
            font-style: normal;
            font-weight: 700;
            font-size: 16px;
            line-height: 22px;
            color: #444444;
        }

            .menu .text.white {
                color: #FFFFFF;
            }

    .block {
        border: 1px solid #F4F4F4;
        padding: 12px 13px;
    }

        .block.block-up {
            border-radius: 10px 10px 0px 0px;
        }

        .block.block-down {
            border-radius: 0px 0px 10px 10px;
        }

</style>

<section class="d-flex flex-column px-4">

    <div class="pt-5">
        <h2 class="mt-3">Чем займёмся?</h2>
    </div>

    <div class="row flex-column gy-3">
        <div class="col-12">
            <a href="/SelectCategory">
                <div class="menu bg-blindsky mt-2">
                    <span class="text white">Мои категории</span>
                </div>
            </a>
        </div>
        <div class="col-12">
            <div class="menu">
                <span class="text">Изучить новые слова</span>
            </div>
        </div>
        <div class="col-12">
            <div class="menu">
                <span class="text">Повторить изученное</span>
            </div>
        </div>
        <div class="col-12">
            <div class="menu">
                <span class="text">Смешанный режим</span>
            </div>
        </div>
    </div>

    <div class="pt-4">
        <h2 class="mt-3">Статистика</h2>
    </div>

    <div class="pt-4 w-100">
        <div class="d-flex align-items-baseline block block-up">
            <span>Выучено сегодня</span>
            <span class="ms-3">0/10</span>
            <img class="ms-1" src="/images/edit2.svg" />
        </div>
        <div class="d-flex align-items-baseline block block-down">
            <span>Выучено всего</span>
            <span class="ms-3">666</span>
        </div>
    </div>

    @if(ConfigurationService.IsDevelopment())
    {
        <button type="button" @onclick="OnButtonClick">click</button>
    }

</section>

<BottomNavBar Mode="@Mode"></BottomNavBar>

@code {
    private byte Mode { get; set; } = 1;
    void OnButtonClick()
    {
        if(++Mode > 3)
        {
            Mode = 1;
        }
    }
}
